{
  "jsxSingleQuote": true,
  "singleQuote": true,
  "arrowParens": "always",
  "trailingComma": "es5",
  "tabWidth": 2,
  "printWidth": 100,
  "useTabs": false,
  "plugins": ["prettier-plugin-organize-imports", "prettier-plugin-solidity"],
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "parser": "solidity-parse",
        "semi": true,
        "bracketSpacing": true,
        "singleQuote": false
      }
    },
    {
      "files": "*.json",
      "options": {
        "printWidth": 120
      }
    }
  ]
}
