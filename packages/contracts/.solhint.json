{
  "extends": "solhint:recommended",
  "rules": {
    "compiler-version": ["error", ">=0.8.0"],
    "avoid-low-level-calls": "off",
    "func-visibility": [
      "warn",
      {
        "ignoreConstructors": true
      }
    ],
    "no-complex-fallback": "off",
    "no-console": "off",
    "no-empty-blocks": "off",
    "no-inline-assembly": "off",
    "not-rely-on-time": "off",
    "reason-string": "off",
    "custom-errors": "off"
  }
}
