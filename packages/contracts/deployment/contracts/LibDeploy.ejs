function stringFromArray(string[] memory arr) internal pure returns (string memory) {
  string memory result = "";
  if (arr.length == 0) return result;

  for (uint i = 0; i < arr.length - 1; i++) 
    result = string(abi.encodePacked(result, arr[i], ","));
  result = string(abi.encodePacked(result, arr[arr.length - 1]));
  return result;
}

function stringFromArray(address[] memory arr) internal pure returns (string memory) {
  string memory result = "";
  if (arr.length == 0) return result;

  for (uint i = 0; i < arr.length - 1; i++) 
    result = string(abi.encodePacked(result, LibString.toHexString(arr[i]), ","));
  result = string(abi.encodePacked(result, LibString.toHexString(arr[arr.length - 1])));
  return result;
}
