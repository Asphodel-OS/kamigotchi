{
  "name": "contracts",
  "license": "MIT",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "----- EXTERNAL -----": "---------------------------",
    "abi": "pnpm abi:gen && pnpm abi:types && pnpm abi:clean",
    "build": "pnpm codegen && rimraf out && pnpm build:systems && pnpm abi",
    "codegen": "pnpm codegen:deploy && pnpm codegen:tests",
    "codegen:deploy": "ejs src/libraries/LibDeploy.ejs -f deploy.json -o src/libraries/LibDeploy.sol",
    "codegen:tests": "ejs src/test/utils/TestSetupImports.ejs -f deploy.json -o src/test/utils/TestSetupImports.sol",
    "deploy": "pnpm deploy:local",
    "dev": "pnpm dev:local",
    "devnode": "mud devnode",
    "start": "pnpm start:local",
    "test": "mud test && pnpm abi:clean",
    "types": "mud types",
    "lint": "prettier && solhint",
    "nuke": "rimraf abi/ out/ types/ node_modules/",
    "----- INTERNAL -----": "---------------------------",
    "abi:gen": "rimraf ../client/abi && mkdir ../client/abi && bash exports.sh && rimraf ../client/abi/*.metadata.json",
    "abi:clean": "for i in ../client/abi/*; do jq 'del(.bytecode) | del(.deployedBytecode) | del(.ast) | del(.rawMetadata) | del(.metadata) | del(.ast) | del(.id)' \"$i\" > \"$i\".tmp && mv \"$i\".tmp \"$i\"; done",
    "abi:types": "rimraf ../client/types && mkdir ../client/types && pnpm abi:types:gen && pnpm abi:types:mappings && rimraf ../client/types/ethers-contracts/factories",
    "abi:types:gen": "typechain --target=ethers-v5 --out-dir ../client/types/ethers-contracts ../client/abi/*.json ",
    "abi:types:mappings": "mud system-types --outputDir ../client/types/ && cp ../client/types/SystemAbis.mts ../client/types/SystemAbis.mjs",
    "build:systems": "forge build --contracts src/systems --skip test --skip script",
    "deploy:lattice": "pnpm patch:gen && mud deploy --chainSpec https://spec.testnet-chain.linfra.xyz/chainSpec.json --deployerPrivateKey 0x26e86e45f6fc45ec6e2ecd128cec80fa1d1505e5507dcd2ae58c3130a7a97b48 && pnpm patch:rm",
    "deploy:lattice:systems": "mud deploy-contracts --rpc 'https://follower.testnet-chain.linfra.xyz' --worldAddress 0xe29DAb7C4d2ade77e99A57FD0aaFd4d03038e4A3 --deployerPrivateKey 0x26e86e45f6fc45ec6e2ecd128cec80fa1d1505e5507dcd2ae58c3130a7a97b48 --systems",
    "deploy:local": "pnpm patch:gen && mud deploy --deployerPrivateKey 0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80 && pnpm patch:rm",
    "deploy:local:systems": "mud deploy-contracts --deployerPrivateKey 0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80 --worldAddress 0x0165878A594ca255338adfa4d48449f69242Eb8F --systems",
    "deploy:opSepolia": "pnpm patch:gen && mud deploy --chain-id 11155420 --rpc https://go.getblock.io/717f1e726a7e4c788226105920a8094e --deployerPrivateKey <privKey> && pnpm patch:rm",
    "deploy:opSepolia:systems": "pnpm patch:gen && mud deploy-contracts --rpc https://go.getblock.io/717f1e726a7e4c788226105920a8094e --deployerPrivateKey <privKey> --worldAddress 0xcfb6aa5e713cEf37e7688544CdbA50d80cE04EE6 --systems",
    "dev:local": "pnpm build && pnpm start",
    "patch:gen": "ejs src/test/Load.t.ejs -o src/test/Load.t.sol",
    "patch:rm": "rm src/test/Load.t.sol",
    "node:local": "anvil -b 1 --base-fee 0 --gas-price 0",
    "start:local": "run-p -l node:local deploy:local",
    "prettier": "prettier --write 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix"
  },
  "devDependencies": {
    "@rari-capital/solmate": "https://github.com/transmissions11/solmate.git#ed67feda67b24fdeff8ad1032360f0ee6047ba0a",
    "@typechain/ethers-v5": "^10.1.1",
    "@types/node": "^18.11.9",
    "ds-test": "https://github.com/dapphub/ds-test.git#c7a36fb236f298e04edf28e2fee385b80f53945f",
    "ejs": "^3.1.9",
    "ethers": "^5.7.1",
    "forge-std": "https://github.com/foundry-rs/forge-std.git#4d36e3f7e2168c8155c641eb0f80e85cd584bd1c",
    "memmove": "https://github.com/brockelmore/memmove.git#d577ecd1bc43656f4032edf4daa9797f756a8ad2",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "run-pty": "^4.0.3",
    "solhint": "^3.3.7",
    "ts-node": "^10.7.0",
    "typechain": "^8.1.1",
    "typescript": "^4.6.2",
    "wait-on": "^6.0.1"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bignumber": "^5.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.0",
    "@latticexyz/cli": "https://github.com/Asphodel-OS/mud-classic/raw/2bd95f0f31b47a0e7c3d55d8fdd765421cbb9085/packages/cli/latticexyz-cli-1.34.0-patch.tgz",
    "@latticexyz/solecs": "1.34.0",
    "@latticexyz/std-contracts": "1.34.0",
    "@openzeppelin/contracts": "^4.9.0",
    "@solidstate/contracts": "^0.0.52",
    "dotenv-cli": "^7.2.1",
    "erc721a": "^4.2.3",
    "solady": "Vectorized/solady",
    "solstat": "https://github.com/primitivefinance/solstat.git#22923658c83d45fa6fe1b53272af84f3cb7664c6"
  }
}