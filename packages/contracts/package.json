{
  "name": "contracts",
  "license": "MIT",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "----- EXTERNAL -----": "---------------------------",
    "abi": "yarn abi:gen && yarn abi:types && yarn abi:clean",
    "build": "yarn codegen && rimraf out && yarn build:systems && yarn abi",
    "codegen": "yarn codegen:deploy && yarn codegen:tests",
    "deploy": "yarn deploy:script",
    "dev": "yarn dev:local",
    "devnode": "mud devnode",
    "prepare": "yarn prepare:local",
    "start": "yarn start:local",
    "test": "yarn codegen:tests && mud test && yarn abi:clean",
    "lint": "yarn prettier && yarn solhint",
    "----- INTERNAL -----": "---------------------------",
    "abi:gen": "rimraf ../client/abi && mkdir ../client/abi && bash exports.sh && rimraf ../client/abi/*.metadata.json",
    "abi:clean": "for i in ../client/abi/*; do jq 'del(.bytecode) | del(.deployedBytecode) | del(.ast) | del(.rawMetadata) | del(.metadata) | del(.ast) | del(.id)' \"$i\" > \"$i\".tmp && mv \"$i\".tmp \"$i\"; done",
    "abi:types": "rimraf ../client/types && mkdir ../client/types && yarn abi:types:gen && yarn abi:types:mappings && rimraf ../client/types/ethers-contracts/factories",
    "abi:types:gen": "yarn typechain --target=ethers-v5 --out-dir ../client/types/ethers-contracts ../client/abi/*.json ",
    "abi:types:mappings": "mud system-types --outputDir ../client/types/ && cp ../client/types/SystemAbis.mts ../client/types/SystemAbis.mjs",
    "build:systems": "forge build --contracts src/systems --skip test --skip script",
    "codegen:deploy": "yarn ejs src/deployment/LibDeploy.ejs -f deploy.json -o src/deployment/LibDeploy.sol",
    "codegen:tests": "yarn ejs src/test/utils/TestSetupImports.ejs -f deploy.json -o src/test/utils/TestSetupImports.sol",
    "deploy:local": "yarn deploy:script --mode DEV",
    "deploy:testnet": "yarn deploy:script --mode TEST",
    "deploy:script": "ts-node src/deployment/commands/deploy.ts",
    "dev:local": "yarn prepare:local && yarn start",
    "node:local": "anvil -b 1 --base-fee 0 --gas-price 0 --timestamp 1708214400",
    "start:local": "run-p -l node:local deploy:local",
    "prettier": "prettier --write 'src/**/*.sol'",
    "prepare:local": "yarn codegen && rimraf out && forge build --skip test && yarn abi",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix"
  },
  "devDependencies": {
    "@rari-capital/solmate": "https://github.com/rari-capital/solmate.git#ed67feda67b24fdeff8ad1032360f0ee6047ba0a",
    "@typechain/ethers-v5": "^10.1.1",
    "@types/ejs": "^3.1.5",
    "@types/node": "^18.11.9",
    "ds-test": "https://github.com/dapphub/ds-test.git#c7a36fb236f298e04edf28e2fee385b80f53945f",
    "ethers": "^5.7.1",
    "execa": "^5.1.1",
    "forge-std": "foundry-rs/forge-std",
    "memmove": "https://github.com/brockelmore/memmove.git#d577ecd1bc43656f4032edf4daa9797f756a8ad2",
    "openurl": "^1.1.1",
    "prettier": "^2.6.2",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "run-pty": "^4.0.3",
    "solhint": "^3.3.7",
    "ts-node": "^10.7.0",
    "typechain": "^8.1.1",
    "typescript": "^4.6.2",
    "wait-on": "^6.0.1",
    "yargs": "^17.7.2"
  },
  "dependencies": {
    "@ethersproject/abi": "^5.7.0",
    "@ethersproject/bignumber": "^5.0",
    "@ethersproject/bytes": "^5.7.0",
    "@ethersproject/providers": "^5.7.0",
    "@latticexyz/cli": "https://github.com/Asphodel-OS/mud-classic/raw/main/packages/cli/latticexyz-cli-1.34.0.tgz",
    "@latticexyz/solecs": "1.34.0",
    "@latticexyz/std-contracts": "1.34.0",
    "@openzeppelin/contracts": "^4.9.0",
    "@solidstate/contracts": "^0.0.52",
    "dotenv-cli": "^7.2.1",
    "erc721a": "^4.2.3",
    "solady": "Vectorized/solady",
    "solstat": "https://github.com/primitivefinance/solstat.git#22923658c83d45fa6fe1b53272af84f3cb7664c6"
  }
}
