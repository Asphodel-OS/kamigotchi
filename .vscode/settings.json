{
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.tabSize": 2,
  "html.format.templating": true,
  "solidity.remappings": [
    "components/=./packages/contracts/src/components",
    "libraries/=./packages/contracts/src/libraries",
    "systems/=./packages/contracts/src/systems",
    "test/=./packages/contracts/src/test",
    "utils/=./packages/contracts/src/utils",
    "ds-test/=./node_modules/ds-test/src/",
    "forge-std/=./node_modules/forge-std/src/",
    "memmove/=./node_modules/memmove/src/",
    "solady/=./node_modules/solady/src/",
    "solecs/=./node_modules/@latticexyz/solecs/src/",
    "solmate/=./node_modules/@rari-capital/solmate/src/",
    "solstat/=./node_modules/solstat/src/",
    "std-contracts/=./node_modules/@latticexyz/std-contracts/src/"
  ],
  "solidity.solhintRules": {
    "no-global-import": true,
    "no-empty-blocks": true,
    "no-unused-vars": true,
    "payable-fallback": true,
    "const-name-snakecase": true,
    "contract-name-camelcase": true,
    "event-name-camelcase": true,
    "func-name-mixedcase": true
  },
  "prettier.jsxSingleQuote": true,
  "prettier.singleQuote": true,
  "prettier.arrowParens": "avoid",
  "prettier.trailingComma": "es5",
  "prettier.tabWidth": 2,
  "prettier.printWidth": 80,
  "prettier.useTabs": false,
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/*.js.map": true
  },
  "[javascript]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false
  },
  "[javascriptreact]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "[typescript]": {
    "editor.formatOnSave": false,
    "editor.formatOnPaste": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": true
  },
  "[json]": {
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/build": true
  },
  "search.useIgnoreFiles": true
}
